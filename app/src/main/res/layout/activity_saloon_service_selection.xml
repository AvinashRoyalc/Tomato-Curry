<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context=".SaloonServiceSelection">

    <RelativeLayout
        android:id="@+id/rlgtrends"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cancel" />

        <ImageView
            android:id="@+id/ivclose"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/green_trends" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlgtrends"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cbHaircut"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:buttonTint="@color/thick_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="8dp"
                android:text="Haircut"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cbFacial"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:buttonTint="@color/thick_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="8dp"
                android:text="Facial"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cbMassaging"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:buttonTint="@color/thick_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="8dp"
                android:text="Massaging"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="Service Type"
            android:textStyle="bold"
            android:textColor="@color/thick_grey"
            android:textSize="14sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <com.tomato.curry.Font.TcFontIcons
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:text="b"
                android:textColor="#4862b9"
                android:textSize="20sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="@color/thick_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/background"
            android:hint="Enter your Name Here"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/thick_grey"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Mobile Number"
            android:textColor="@color/thick_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etMoblie"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/background"
            android:hint="Enter your Number Here"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:textColorHint="@color/thick_grey"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:text="Slot Time"
                    android:textColor="@color/thick_grey"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/background"

                    >

                    <TextView
                        android:id="@+id/tvtime"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="34dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="1:00"
                        />

                </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Date"
                    android:textColor="@color/thick_grey"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_weight="4"
                        android:id="@+id/tvdate"
                        android:textColor="@color/black"
                        android:background="@android:color/transparent"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp"
android:text="01-sun-may"
                        />

                    <com.tomato.curry.Font.TcFontIcons
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:text="n"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="Email Address"
            android:textStyle="bold"
            android:textColor="@color/thick_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etEmail"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/background"
            android:hint="Enter your email Here"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textColorHint="@color/thick_grey"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="170dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/confirm_button_background"
            android:textStyle="bold"
            android:text="CONFIRM"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>
